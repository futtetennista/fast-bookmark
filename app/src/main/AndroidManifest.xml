<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="playground.copytoshare">

  <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

  <application
      android:name=".CopyToShareApplication"
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">
    <activity
        android:name=".ui.preferences.SettingsActivity"
        android:label="@string/app_name">
      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <receiver android:name=".background.boot.BootBroadcastReceiver" android:enabled="true" />

    <service android:name=".background.service.CopyToShareService" android:enabled="true" />
  </application>
</manifest>
